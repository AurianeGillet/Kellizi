<div class="panel panel-default">
    <div class="container-fuid gradient">
      <div class="container panel-default">
      <h1>Edit your contract - <%= @contract.product.name %></h1>
      </div>
    </div>
    <div class="panel-body">
      <div class="container">
        <div class="row">
            <%= simple_form_for @contract, data: {turbo: false}, class:"position-relative" do |f| %>
              <%= f.association :company %>
              <%= f.association :product %>
              <%= f.input :price, as: :integer %>
              <%= f.input :source, as: :select, collection: Contract.sources.keys %>
              <p>Activity Status <%= f.input :active, as: :radio_buttons %></p>
              <div class="d-flex mb-3">
                <div>
                  Starts at:
                  <%= f.date_field :starts_at, class: "form-rounded form-control", as: :date , data: {change_color_target:"input", action:"change->change-color#update"}%>
                </div>

                <div>
                  Ends at:
                  <%= f.date_field :ends_at, class: "form-rounded form-control", as: :date , data: {change_color_target:"input", action:"change->change-color#update"}%>
                </div>
              </div>
              <%= f.input :pdf_contract, as: :file %>
              <%= f.input :pdf_certificate, as: :file %>
              <%= f.button :button, class: 'btn-grad-light' %>
              <%= link_to "Back", contract_path(@contract.id), class:"btn-gray position-absolute", style:"width: 243px; margin-left: 21px; right:16%" %>
            <% end %>
        </div>
    </div>
</div>
